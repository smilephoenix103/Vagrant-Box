<div class="container">
  <div class="jumbotron">
    <h1 class="display-1">Create Product</h1>
  </div>
  <form class="" action="index.html" method="post">
    <table class="table">
      <tr>
        <td><label for="name">Name:</label></td>
        <td><input class="form-control" id="name" type="text" name="name"></td>
      </tr>
      <tr>
        <td><label for="price">Price:</label></td>
        <td><input class="form-control" id="price" type="number" name="price"></td>
      </tr>
      <tr>
        <td><label for="description">Description:</label></td>
        <td><textarea class="form-control" id="description" name="description" rows="4" cols="22"></textarea></td>
      </tr>
      <tr>
        <td><label for="imgurl">Image URL:</label></td>
        <td><input class="form-control" id="imgurl" type="text" name="imgurl"></td>
      </tr>
    </table>
    <button class="form-control btn btn-primary" type="submit">Add Product</button>
  </form>
</div>
