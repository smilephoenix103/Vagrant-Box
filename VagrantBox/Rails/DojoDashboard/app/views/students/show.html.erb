<div class="container">
    <div class="jumbotron">
        <h1><%= @dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></h1>
    </div>
    <h3>Email: <%= @student.email %></h3>
    <h2>Cohort</h2>
    <table>
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Name</th>
        </thead>
        <% for student in @dojo.students %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
            </tr>
        <% end %>
    </table>
    <a href="/"><button class="btn btn-primary">Home</button></a>
    <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>/edit"><button class="btn btn-success">Edit</button></a>
</div>