<div class="container">
    <div class="jumbotron">
        <h1>Edit <%= @student.first_name %> <%= @student.last_name %></h1>
    </div>
    <form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">        
    <input type="hidden" name="_method" value="put">
        <table>
            <tr>
                <td><label for="first_name">First Name:</label></td>
                <td><input type="text" id="first_name" name="student[first_name]" value="<%= @student.first_name %>"></td>
            </tr>
            <tr>
                <td><label for="last_name">Last Name:</label></td>
                <td><input type="text" id="last_name" name="student[last_name]" value="<%= @student.last_name %>"></td>
            </tr>
            <tr>
                <td><label for="email">Email:</label></td>
                <td><input type="text" id="email" name="student[email]" value="<%= @student.email %>"></td>
            </tr>
            <tr>
                <td><label for="dojo">Dojo:</label></td>
                <td><select name="student[dojo]" id="dojo">
                    <option value="<%= @dojo.id %>"><%= @dojo.branch %></option>
                    <% for dojo in @dojos %>
                        <option value="<%= dojo.id %>"><%= @dojo.branch %></option>
                    <% end %>
                </select></td>
            </tr>
        </table>
        <button class="btn btn-success" type="submit">Update</button>
        <a href="/"><button class="btn btn-primary">Home</button></a>
        <a href="/dojos/<%= @dojo.id %>/students"><button class="btn btn-info"><%= @dojo.city %></button></a>
    </form>
</div>