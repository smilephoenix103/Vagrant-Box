<div class="container">
    <div class="pb-2 mt-4 mb-4 border-bottom">
        <h1 class="display-4 inline">Edit <%= @student.first_name %> <%= @student.last_name %></h1>
        <a class="float" href="/sessions" data-method="delete"><button class="btn btn-sm btn-info">Logout</button></a>
        <a class="float mr-1" href="/courses"><button class="btn btn-sm btn-info">Courses</button></a>
        <a class="float mr-1" href="/instructors"><button class="btn btn-sm btn-info">Instructors</button></a>
        <% if session[:admin] == false %>
        <a class="float mr-1" href="/students"><button class="btn btn-sm btn-info">Students</button></a>
        <% end %>
        <% if @student == current_user %>
        <a class="float mr-1" href="/students/<%= @student.id %>" data-method="delete"><button class="btn btn-sm btn-danger">Delete Student</button></a>
        <% end %>
    </div>
    <form action="/students/<%= @student.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="put">
        <table class="table table-borderless">
            <tr>
                <td><label for="first_name">First Name:</label></td>
                <td><input class="form-control" type="text" name="student[first_name]" id="first_name" value="<%= @student.first_name %>"></td>
            </tr>
            <tr>
                <td><label for="last_name">Last Name:</label></td>
                <td><input class="form-control" type="text" name="student[last_name]" id="last_name" value="<%= @student.last_name %>"></td>
            </tr>
            <tr>
                <td><label for="email">Email:</label></td>
                <td><input class="form-control" type="email" name="student[email]" id="email" value="<%= @student.email %>"></td>
            </tr>
        </table>
        <button class="btn btn-primary" type="submit">Update Student</button>
    </form>
    <% if flash[:messages] %>
        <% for error in flash[:messages] %>
            <p class="text-danger font-weight-bold m-0"><%= error %></p>
        <% end %>
    <% end %>
</div>
